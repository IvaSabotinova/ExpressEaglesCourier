@model RegisterViewModel

@{
    ViewData["Title"] = "Register form";
}

<h2 class="mb-lg-n1">@ViewData["Title"]</h2>
<br />
<div class="row">
    <div class="col-md-5">
        <h4 class="mb-3">Please enter your details</h4>
        <form asp-route-returnUrl="" method="post">                   
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                <label asp-for="Password" ></label>
                <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                <label asp-for="TelephoneNumber" ></label>
                <input asp-for="TelephoneNumber" class="form-control" placeholder="Incl. country and area code (00359xxxxxxxxx)" />
                    <span asp-validation-for="TelephoneNumber" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Register</button>            
            
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4 class="offset-3">Use another service to register.</h4>
           @* <hr />
