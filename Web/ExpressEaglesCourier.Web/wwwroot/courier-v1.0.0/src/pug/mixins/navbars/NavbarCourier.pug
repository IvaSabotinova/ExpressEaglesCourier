mixin NavbarCourier
  nav.navbar.navbar-expand-lg.navbar-light.fixed-top.py-3.d-block(data-navbar-on-scroll)
    .container
      a.navbar-brand(href='index.html')
        img(src=`${CWD}assets/img/gallery/logo.png`   height="45"  alt='logo')

      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon 
      #navbarSupportedContent.collapse.navbar-collapse.border-top.border-lg-0.mt-4.mt-lg-0
        ul.navbar-nav.ms-auto.pt-2.pt-lg-0.font-base
          li.nav-item.px-2
            a.nav-link(aria-current='page', href=`${CWD}index.html` class=currentPage === 'index' ? 'active' : false ) Home
          li.nav-item.px-2
            a.nav-link(href='#services') Our Services
          li.nav-item.px-2
            a.nav-link(href='#findUs') Find Us
        
        .dropdown.d-none.d-lg-block
          button.btn.bg-soft-warning#dropdownMenuButton1.ms-2(type='submit' data-bs-toggle='dropdown' aria-expanded='false')
            i.fas.fa-search.text-warning
          
          .dropdown-menu.dropdown-menu-lg-end.p-0.rounded(aria-labelledby='dropdownMenuButton1' style="top:55px")
            form
              input.form-control.border-200(type='search' placeholder='Search' aria-label='Search' style="background:#FDF1DF;") 

        a.btn.btn-primary.order-1.order-lg-0.ms-lg-3( href="#!") Contact Us
        form.d-flex.my-3.d-block.d-lg-none
          input.form-control.me-2.border-200.bg-light(type='search' placeholder='Search' aria-label='Search')
          button.btn.btn-outline-primary(type='submit') Search

        