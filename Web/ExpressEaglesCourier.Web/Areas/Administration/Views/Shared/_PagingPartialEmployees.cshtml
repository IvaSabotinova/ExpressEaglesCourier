@model PagingEmployeeAllViewModel


<nav aria-label="...">
    <ul class="pagination justify-content-center">
        <li class="page-item
        @if (!Model.HasPreviousPage) 
        {
        <text>disabled</text> 
        }">
            <a class="page-link" asp-action="GetAll" asp-route-shipmentId="@Model.ShipmentId" asp-route-page="@Model.PreviousPageNumber">Previous</a>
        </li>
    
  @*      <li class="page-item"><a class="page-link"></a></li>*@

        <li class="page-item active" aria-current="page">
            <span class="page-link">
                @Model.CurrentPageNumber
               @* <span class="sr-only"></span>*@
            </span>
        </li>
       @* <li class="page-item"><a class="page-link" href="#">3</a></li>*@
        <li class="page-item 
        @if(!Model.HasNextPage)
         {
        <text>disabled</text>
        }">
            <a class="page-link" asp-action="GetAll" asp-route-shipmentId="@Model.ShipmentId" asp-route-page="@Model.NextPageNumber">Next</a>
        </li>
    </ul>
</nav>



