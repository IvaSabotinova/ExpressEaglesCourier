@model EmployeeDetailsViewModel

@{
    ViewBag.Title = "Employee Details";
}

<script>
    var msg = '@TempData[Message]';
    if (msg.length) {
        alert(msg);
    }
</script>


<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="container" style="display:inline">
    <div class="row">
        <div class="card text-body bg-light col-6">
            <input type="hidden" asp-for="@Model.Id" />
            <p style="font-size:17px;"><u>Employee Name:</u></p>
            <p>@Model.FullName</p>
            <p style="font-size:17px;"><u>Employee Phone Number:</u></p>
            <p>@Model.PhoneNumber</p>
            <p style="font-size:17px;"><u>Company Name:</u></p>
            <p>@(@Model.VehicleDetails ?? "None")</p>
            <p>@Model.Position</p>
            <p style="font-size:17px;"><u>Total Number Of Shipments:</u> @Model.OfficeDetails</p>
        </div>
        <div class="col-5">
            <img class="card-img-top" style="width: 25rem;"
                 src="~/img/gallery/new_employee.net.jpg" alt="">
        </div>
        <div class="form-inline offset-1 mt-4">
            @* @if (this.User.Identity.IsAuthenticated)
            {*@
            <a class="btn btn-warning" asp-area="Administration" asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="ms-2 btn btn-danger" asp-area="Administration" asp-controller="Employee" asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Are you sure you want to delete that customer?')">Delete</a>
            @* }*@
        </div>
    </div>
</div>
